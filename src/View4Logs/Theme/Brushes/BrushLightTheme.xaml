<theme:ThemeResourceDictionary
    x:Class="View4Logs.Theme.Brushes.BrushLightTheme"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:theme="clr-namespace:View4Logs.Theme"
    Name="Light"
    Category="{x:Type theme:Brush}">
    <SolidColorBrush
        x:Key="{x:Static theme:Brush.AppBarBackground}"
        Color="#464E6A" />
    <SolidColorBrush
        x:Key="{x:Static theme:Brush.Background}"
        Color="#F7F7F7" />
    <SolidColorBrush
        x:Key="{x:Static theme:Brush.Border}"
        Color="#C6C6C6" />
    <SolidColorBrush
        x:Key="{x:Static theme:Brush.HintText}"
        Color="#212121" />
    <SolidColorBrush
        x:Key="{x:Static theme:Brush.Text}"
        Color="#000000" />
    <SolidColorBrush
        x:Key="{x:Static theme:Brush.Overlay}"
        Opacity="0.1"
        Color="Black" />

</theme:ThemeResourceDictionary>
