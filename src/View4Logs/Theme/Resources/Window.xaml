<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:theme="clr-namespace:View4Logs.Theme"
                    xmlns:c="clr-namespace:View4Logs.UI.Control">
    <Style TargetType="{x:Type Window}">
        <Setter Property="Background" Value="{DynamicResource {x:Static theme:Brush.Background}}"/>
        <Setter Property="Foreground" Value="{DynamicResource {x:Static theme:Brush.Text}}"/>
        <Setter Property="FontFamily" Value="{DynamicResource {x:Static theme:FontFamily.Default}}"/>
        <Setter Property="FontSize" Value="{DynamicResource {x:Static theme:FontSize.Normal}}"/>
    </Style>

    <Style TargetType="{x:Type c:AppWindow}" BasedOn="{StaticResource {x:Type Window}}">
    </Style>

</ResourceDictionary>
