<base:View x:Class="View4Logs.UI.View.LogsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
             xmlns:base="clr-namespace:View4Logs.Base"
             xmlns:vm="clr-namespace:View4Logs.UI.ViewModel"
             xmlns:m="clr-namespace:View4Logs.Common"
             xmlns:theme="clr-namespace:View4Logs.Theme">
    <DataTemplate DataType="{x:Type vm:LogsViewModel}">
        <ItemsControl ItemsSource="{Binding Path=Messages, Mode=OneTime}">
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type m:LogMessage}">
                    <Border BorderThickness="0 0 0 1" BorderBrush="{DynamicResource {x:Static theme:Brush.Border}}">
                        <TextBlock Text="{Binding Path=Message, Mode=OneTime}"/>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DataTemplate>
</base:View>
