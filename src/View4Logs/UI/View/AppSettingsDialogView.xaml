<base:View
    x:Class="View4Logs.UI.View.AppSettingsDialogView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:View4Logs.Base"
    xmlns:vm="clr-namespace:View4Logs.UI.ViewModel">

    <DataTemplate DataType="{x:Type vm:AppSettingsDialogViewModelBase}">
        <StackPanel>
            <TextBlock Text="{Binding Label}" />
            <UniformGrid
                Width="400"
                Height="200">
                <Button
                    Command="{Binding CloseCommand}"
                    Content="Close" />
                <Button
                    Command="{Binding NestedCommand}"
                    Content="Nested Dialog" />
            </UniformGrid>
        </StackPanel>
    </DataTemplate>

</base:View>
