<base:View
    x:Class="View4Logs.UI.View.ToolBoxView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:base="clr-namespace:View4Logs.UI.Base"
    xmlns:theme="clr-namespace:View4Logs.UI.Theme"
    xmlns:vm="clr-namespace:View4Logs.UI.ViewModel">

    <DataTemplate DataType="{x:Type vm:ToolBoxViewModel}">
        <Grid
            Width="60"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource {x:Static theme:Brush.SideBarBackground}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Button
                Grid.Row="1"
                Command="{Binding OpenAppSettingsDialog}"
                Style="{DynamicResource {x:Static theme:Button.Icon}}">
                <TextBlock
                    Padding="10"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource {x:Static theme:FontFamily.FontAwesome}}"
                    Text="{x:Static theme:FontAwesome.Cog}"
                    TextElement.FontSize="{DynamicResource {x:Static theme:FontSize.Large}}" />

            </Button>
        </Grid>
    </DataTemplate>

</base:View>

